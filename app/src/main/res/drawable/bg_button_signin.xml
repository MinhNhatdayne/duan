<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#0D7FD6" />
            <corners android:radius="24dp" />
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp" />
            <size android:height="56dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#0093E9" />
            <corners android:radius="24dp" />
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp" />
            <size android:height="56dp" />
            <shadowColor android:color="#40000000" />
        </shape>
    </item>

</selector>
