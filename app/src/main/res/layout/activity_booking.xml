<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.BookingActivity">

    <TextView
            android:id="@+id/tv_title_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingTop="30dp"
            android:paddingEnd="16dp"
            android:text="Lấy số thứ tự"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <EditText
            android:id="@+id/et_search_booking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="10dp"
            android:hint="Tìm kiếm"
            android:drawableStart="@android:drawable/ic_search_category_default"
            android:drawablePadding="8dp"
            android:background="@drawable/rounded_search_background"
            app:layout_constraintTop_toBottomOf="@id/tv_title_booking"
            android:inputType="text"
            android:imeOptions="actionSearch"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/et_search_booking"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            android:padding="16dp">

        <LinearLayout
                android:id="@+id/ll_service_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    style="@style/ServiceCardStyle"
                    android:layout_marginBottom="16dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Liên hệ"
                            style="@style/ServiceContactLabel" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chỉnh nha"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chỉnh nha tái khám định kì hoặc gắn mắc cài"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp"/>

                    <TextView
                            android:id="@+id/btn_dat_lich_chinh_nha"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đặt lịch"
                            android:textSize="16sp"
                            android:textColor="@color/design_default_color_primary_dark"
                            android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    style="@style/ServiceCardStyle"
                    android:layout_marginBottom="16dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Liên hệ"
                            style="@style/ServiceContactLabel" />

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Điều trị tổng quát"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Điều trị hàn răng, chữa tuỷ, nhổ răng khôn, nhổ răng ngầm, chữa viêm lợi, nạo nha chu,..."
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp"/>

                    <TextView
                            android:id="@+id/btn_dat_lich_tong_quat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đặt lịch"
                            android:textSize="16sp"
                            android:textColor="@color/design_default_color_primary_dark"
                            android:textStyle="bold"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>