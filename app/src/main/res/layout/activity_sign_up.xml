<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A4E7F2">

    <!-- Sóng uốn góc phải -->
<!--    <ImageView-->
<!--        android:id="@+id/imgHeader"-->
<!--        android:layout_width="220dp"-->
<!--        android:layout_height="180dp"-->
<!--        android:layout_alignParentTop="true"-->
<!--        android:layout_alignParentEnd="true"-->
<!--        android:scaleType="fitEnd"-->
<!--        android:src="@drawable/bg_header_wave" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="30sp" />

            <!-- "Sign up with" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Sign up with"
                android:textSize="16sp"
                android:textColor="#000000" />

            <!-- Social buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_google" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/ic_facebook" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edittext"
                android:hint="Your Name"
                android:paddingHorizontal="16dp"
                android:textColor="@android:color/black"
                android:textColorHint="#80000000"
                />

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Email"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edittext"
                android:hint="example@gmail.com"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="16dp"
                android:textColor="@android:color/black"
                android:textColorHint="#80000000"
                />



            <!-- Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Password"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edittext"
                android:hint="Enter password"
                android:inputType="textPassword"
                android:paddingHorizontal="16dp"
                android:textColor="@android:color/black"
                android:textColorHint="#80000000"
                />

            <!-- Confirm password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="Confirm your password"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtRePassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edittext"
                android:hint="Re-enter your password"
                android:inputType="textPassword"
                android:paddingHorizontal="16dp"
                android:textColor="@android:color/black"
                android:textColorHint="#80000000" />

            <!-- Terms text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Creating an account means that you are okay with our Terms of Service and our Privacy Policy"
                android:textColor="#000000"
                android:textSize="12sp"
                android:gravity="center" />

            <!-- Button Create -->
            <Button
                android:id="@+id/btnCreate"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                app:backgroundTint="null"
                android:background="@drawable/bg_button_signin"
                android:text="Create an Account"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textAllCaps="false" />

            <!-- Already have account -->
            <!--            <TextView-->
            <!--                android:id="@+id/txtLogin"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="10dp"-->
            <!--                android:gravity="center"-->
            <!--                android:text="Already have an account? Sign in"-->
            <!--                android:textColor="#000000"-->
            <!--                android:textSize="13sp" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account?"
                    android:textSize="13sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/txtLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Log in"
                    android:textSize="13sp"
                    android:textColor="#2EA9FF" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
